{# TRAITEMENT AJAX POUR LE CLASSEMENT #}
<script>
	$(function(){            
		$(".imgclassement").hide();
		$("select.classement ").change(function(){ 
			var classement = $(".classement").val();
			var style = {{ style }};
			var region = {{ region }};
			var page = {{ page }};
			var total = {{ total }};
			var displaypage = {{ displaypage }};
                    
			if(classement != 0){
			    $(".imgclassement").show();
			    var DATA = 'classement=' + classement + "&style=" + style + "&region=" + region + "&page=" + page + "&displaypage=" + displaypage + "&total=" + total ;
			    $.ajax({
			        type: "post",
			    	url: "{{ path('_classementhebergementregionajax') }}",
			        data: DATA,
			        cache: false,
			        success: function(data){
			           $('.liste').html(data);
			           $(".imgclassement").hide();

                                   {% if app.request.locale == "fr" %}   
                                        $("a.pageright").attr("href", "{{ path('_hebergementtyperegionfr',{'name': nomCategorie|convert_encoding('UTF-8', 'UTF-8')|lower, 'region':nomRegion|convert_encoding('UTF-8', 'UTF-8')|lower, 'page':page+1 }) }}/"+classement+"#target");
                                        $("a.pageleft").attr("href", "{{ path('_hebergementtyperegionfr',{'name': nomCategorie|convert_encoding('UTF-8', 'UTF-8')|lower, 'region':nomRegion|convert_encoding('UTF-8', 'UTF-8')|lower, 'page':page-1}) }}/"+classement+"#target");
                                   {% else %}
                                        $("a.pageright").attr("href", "{{ path('_hebergementtyperegionen',{'name': nomCategorie|convert_encoding('UTF-8', 'UTF-8')|lower, 'region':nomRegion|convert_encoding('UTF-8', 'UTF-8')|lower, 'page':page+1}) }}/"+classement+"#target");
                                        $("a.pageleft").attr("href", "{{ path('_hebergementtyperegionen',{'name': nomCategorie|convert_encoding('UTF-8', 'UTF-8')|lower, 'region':nomRegion|convert_encoding('UTF-8', 'UTF-8')|lower, 'page':page-1}) }}/"+classement+"#target");                                          
                                   {% endif %}
                                   //$("a.pagescolor").attr("id", $("select.classement option[value="+classement+"]").text() );
			        }
			    });  
			    return false;
			}
		});
              
            {% if ordre != 0 %}

                $("select.classement option[value="+{{ ordre }}+"]").attr("selected", "selected");
            {% else %}
                $("select.classement option[value=0]").attr("selected", "selected");    
            {% endif %}
	});
</script>