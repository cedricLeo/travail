          {# <div><a href="#"><img src="images/monItineraire.png" width="187" height="136" alt="Mon itinéraire" /></a></div>#}
           <a href="{{ path('_hebergementinfoclient',{'name':w.repertoirefr|lower}) }}" title="{{ w.nomfr }} région {{ w.regionid.nomfr }}" target="_blank">
