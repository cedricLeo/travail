{% extends '::base2.html.twig' %}

	{% block picture %}	
            <p class="legendeHome">{{ "forfait" | trans }}</p>
            {# div qui va contenir la photo principal du sujet de la section #}
		<div id="photoprincipale">			
                    <div class="nomSousCategorie">
                            <h1>{{ "forfait" | trans }}</h1>
                            <h3><a href="{{ path('_hebergementforfaiten',{'name': clientAleatoire.hebergementid.repertoireen|lower } ) }}" target="_blank" title="Packages {{ clientAleatoire.hebergementid.nomen }}">{{ clientAleatoire.nomen }}, {{ clientAleatoire.hebergementid.nomen }} region {{ clientAleatoire.hebergementid.regionid.nomen }}</a></h3>
                    </div>
                    {% if clientAleatoire.imageprincipale is not empty %}
                            <img src="{{ asset('uploads/forfaits-client/image_principale') }}/{{ clientAleatoire.id }}/{{ clientAleatoire.imageprincipale }}" class="big_picture" alt="{{ clientAleatoire.forfaitclientid.nomen }}" />
                    {% else %}
                            <img src="{{ asset('uploads/forfaits/images_') }}{{ idActivite }}/{{ imgRandom }}" class="big_picture" alt="Replacement image for {{ clientAleatoire.hebergementid.nomen }} ">
                    {% endif %}
		</div>
		{% endblock %}
		
		{# TEXTE DE D'ACCUEIL #}
		{% block texte_accueil %}                  
                     <p>{{ texte_accueilen|striptags|nl2br }}</p>
		{% endblock %}
		
		{% block body %} 
                        <div class="region">
                              <h2>{{ "choisir.endroit.profiter.forfait" | trans }}</h2>                              
                                    <ul>		
                                       {% for listeregionqc in regionqc %}
                                              {% if loop.index == 1 %}
                                              <li class="province"><a href="{{ path('_forfaitsprovinceen',{'name':listeregionqc.hebergementid.provinceid.repertoireen|lower}) }}" title="{{ "forfait" | trans }} province {{ listeregionqc.hebergementid.provinceid.nomen }}">{{ listeregionqc.hebergementid.provinceid.nomen }}</a></li>
                                              {% endif %}
                                              <li><a href="{{ path('_forfaitsregionsen',{ 'name':listeregionqc.hebergementid.regionid.repertoireen|lower}) }}" title="{{ "forfait" | trans }} {{ listeregionqc.hebergementid.regionid.nomen }} region">{{listeregionqc.hebergementid.regionid.nomen }}</a></li>
                                        {% endfor %}
                                    </ul>
                                    <ul>
                                        {% for listeregionon in regionon %}
                                              {% if loop.index == 1 %}
                                              <li class="province"><a href="{{ path('_forfaitsprovinceen', {'name':listeregionon.hebergementid.provinceid.repertoireen|lower}) }}" title="{{ "forfait" | trans }} province {{ listeregionon.hebergementid.provinceid.nomen }}">{{ listeregionon.hebergementid.provinceid.nomen }}</a></li>
                                              {% endif %}
                                              <li><a href="{{ path('_forfaitsregionsen',{'name':listeregionon.hebergementid.regionid.repertoireen|lower}) }}" title="{{ "forfait" | trans }} {{ listeregionon.hebergementid.regionid.nomen }} region">{{ listeregionon.hebergementid.regionid.nomen }}</a></li>
                                        {% endfor %}
                                    </ul>
                                    <ul>
                                        {% for listeregionnb in regionnb %}
                                              {% if loop.index == 1 %}
                                              <li class="province"><a href="{{ path('_forfaitsprovinceen', {'name':listeregionnb.hebergementid.provinceid.repertoireen|lower}) }}" title="{{ "forfait" | trans }} province {{ listeregionnb.hebergementid.provinceid.nomen }}">{{ listeregionnb.hebergementid.provinceid.nomen }}</a></li>
                                              {% endif %}
                                              <li><a href="{{ path('_forfaitsregionsen', {'name':listeregionnb.hebergementid.regionid.repertoireen|lower}) }}" title="{{ "forfait" | trans }} {{ listeregionnb.hebergementid.regionid.nomen }} region">{{ listeregionnb.hebergementid.regionid.nomen}}</a></li>
                                        {% endfor %}
                                    </ul>
                                     <br class="clearfloat" />
                                    {# PUB GOOGLE #}
                                  <div id="zone_01" class="pubGoogleBottom pubGoogleAttrait" >
                                        <script type='text/javascript'>
                                                googletag.cmd.push(function() { googletag.display('zone_01'); });
                                        </script>
                                  </div>                                 	 
                         </div>				     
				<div class="colonnes4photo">
				  <h2 class="retouche">{{ "categorie.forfait" | trans }} </h2>					
                                    {% for f in listforfaitGroupBy %}
                                            <div> 
                                                    <h2><a href="{{ path('_forfaitsactiviteindexen',{'name':f.forfaitclientid.repertoireen|lower }) }}" title="Package {{ f.forfaitclientid.nomen|lower }}">{{ f.forfaitclientid.nomen }}</a></h2>
                                                    {% if f.imagecategorie is not empty %}
                                                        <a href="{{ path('_forfaitsactiviteindexen',{'name':f.forfaitclientid.repertoireen|lower }) }}" title="Package {{ f.nomen }}"><img src="{{ asset('uploads/forfaits-client/image_categorie') }}/{{ f.id }}/{{ f.imagecategorie }}" class="img_categoie_portail" alt="{{ f.nomen }}" title="{{ f.forfaitclientid.nomen }} {{ f.nomen|lower }}" /></a>
                                                    {% else %}
                                                        <a href="{{ path('_forfaitsactiviteindexen',{'name':f.forfaitclientid.repertoireen|lower }) }}" title="Package {{ f.nomen }}"><img src="{{ asset('uploads/forfaits') }}/{{ f.forfaitclientid.id }}/{{ f.forfaitclientid.image }}" class="img_categoie_portail" alt="{{ f.nomen }}" title="{{ f.forfaitclientid.nomen }} {{ f.nomen|lower }}" /></a>
                                                    {% endif %} 
                                                    {% if f.hebergementid is not empty %}
                                                    <h3><a href="{{ path('_hebergementforfaiten',{'name':f.hebergementid.repertoireen|lower } ) }}" title="Package {{ f.forfaitclientid.nomen|lower }} - {{ f.hebergementid.nomen|lower }}" target="_blank">{{ f.hebergementid.nomen|truncate(23, '...') }}</a></h3> 
                                                    {% else %}
                                                    <h3><a href="{{ path('_hebergementforfaiten',{'name':f.attraitid.repertoireen|lower } ) }}" title="Package {{ f.forfaitclientid.nomen|lower }} - {{ f.attraitid.nomen|lower }}" targte="_blank">{{ f.attraitid.nomen|truncate(23, '...') }}</a></h3>
                                                    {% endif %}
                                            </div>
                                    {% endfor %}
				<br class="clearfloat" />
			   </div>
		{% endblock %}
		
		{% block gauche %}
			{% include 'MyAppGlobalBundle:Forfaits:suggestionsCategorie-en.html.twig' %}
		{% endblock %}
