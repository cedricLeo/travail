{% extends "::base_mobile.html.twig" %}

{% block body %}
        {% include '::navigation_fiche_client_mobile.html.twig' %}

        <div id="container"> 
        {% for p in retourDetail %}
            <h1>{{ p.nomfr }}</h1>
            {# affichage de la présentation de l'hébergement #}
            {% if section == "accueil" %}               
                {% include 'MyAppMobileBundle:MobileHebergement:presentation.html.twig' %}                    
            {% endif %}
            {# fin de l'affichage de la présentation de l'hébergement #}
            
            {# affichage des chambres #}
