            {#<div id="sante">
                santé
            </div>
            {# fin des soins de santé #}

            {# affichage du restaurant #}
            {#<div id="restaurant">
                restaurant
            </div>
            {# fin de l'affichage du restaurant #}

            {# affichage des informations et réservation #}
            {% if section == "information-reservation" %}
                {% include 'MyAppMobileBundle:MobileHebergement:reservation.html.twig' %}
            {% endif %}
            {# fin des informations et réservation #}

            {# affichage des directions routières #}
            {% if section == "directions-routieres" %}                  
                {% include 'MyAppMobileBundle:MobileHebergement:direction-en.html.twig' %}
            {% endif %}
            {# fin des directions routières #}
        {% endfor %}    
        </div>
{% endblock %}

