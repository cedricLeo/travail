            {# affichage des forfaits #}
            {% if forfait is not empty %}
                {% if section == "forfait-promotion" %}
                    {% include 'MyAppMobileBundle:MobileHebergement:forfait.html.twig' %}
                {% endif %}
            {% endif %}
            {# fin de l'affichage des forfaits #}
            
            {# affichage des activités et services #}
            {% if section == "activites-services" %}
                {% include 'MyAppMobileBundle:MobileHebergement:activite.html.twig' %}
            {% endif %}
            {# fin de l'affichage des activités et services #}

            {# affichage du corporatif #}
            {% if corporatif is not empty %}
                {% if section == "corporatif-evenement" %}
                    {% include 'MyAppMobileBundle:MobileHebergement:corporatif.html.twig' %}
                {% endif %}
            {% endif %}
            {# fin de l'affichage du corporatif #}
            
            {# affichage de la galerie photo #}
