{% if villerecorder is defined %}
    <label class="lblnompays">Ville</label>
	    <div class="ville_id">
			<select class="txt_add_state listeville" id="listeville" name="listeville" required="required">
			{% if villerecorder is defined %}
				{% for pr in villerecorder %}
					<option value="{{ pr.id }}">{{ pr.nomfr }}</option>
				{% endfor %}
			{% endif %}
			</select>
		</div>
{% else %}
	<img class="imgtriville" src="{{ asset('bundles/myappglobal/images/loading.gif') }}" style="display:block; position:relative; top:50px; left:-50px;">
	<label class="lblnompays">Ville</label>
	    <div class="ville_id">
			<select class="txt_add_state listeville" id="listeville" name="listeville" required="required">
			{% if zone is defined %}
				{% for pr in zone %}
					<option value="{{ pr.id }}">{{ pr.nomfr }}</option>
				{% endfor %}
			{% endif %}
			</select>
		</div>
{% endif %}
<script>
	$(function(){
		{% if villeSelected is defined %}
			$("#listeville option[value={{ villeSelected }}]").attr("selected", "selected");
		{% endif %}
	});
</script>