				    {{ form_label(form.max_personne, "Nombre d'occupants *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.max_personne, {'attr':{'class':'txt_add_state'}}) }}
				    {{ form_label(form.tarif_preferentiel, "Tarif préférentiel", {'attr':{'class':'lblnompays lblcheckbox'}}) }}
				    {{ form_widget(form.tarif_preferentiel, {'attr':{'class':'checkbox'}}) }}	   
				    {{ form_label(form.tarif_min_basse_saison, "Tarif minimum basse saison", {'attr':{'class':'lblnompays'}}) }}
