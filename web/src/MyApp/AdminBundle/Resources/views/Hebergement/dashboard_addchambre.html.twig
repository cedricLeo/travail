				    <h3 id="galleriePhotoAttr" title="Ajouter, modifier ou supprimer une photo de la galerie">Galerie photo </h3>
				    <div id="galeriePhotoPreview">
				    	<ul class="tags" data-prototype="{{ form_widget(form.galery_id.vars.prototype)|e }}"> </ul>
				    	
				    {#{{ form_label(form.galery_id, "Photo(s) de la galerie", {'attr':{'class':'lblnompays '}}) }}
				    	{{ form_row(form.galery_id, {'attr':{'class':'txt_add_state'}}) }}#}
				    	
				    <p class="resize_p_form">&nbsp;</p>
				    </div>
				    {{ form_rest(form) }}	
				    <input type="submit" value="" class="boutonvalidenregistrer Btn_form_submit"/>
