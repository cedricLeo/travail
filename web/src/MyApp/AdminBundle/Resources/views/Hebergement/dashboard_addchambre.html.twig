				    {{ form_widget(form.tarif_min_haute_saison, {'attr':{'class':'txt_add_state'}}) }}
				    {{ form_label(form.tarif_max_haute_saison, "Tarif maximum haute saison", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.tarif_max_haute_saison, {'attr':{'class':'txt_add_state'}}) }}
