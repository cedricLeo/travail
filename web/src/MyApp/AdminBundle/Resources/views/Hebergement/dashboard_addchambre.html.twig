				    {{ form_label(form.dejeuner_americain, "Déjeuner américain", {'attr':{'class':'lblnompays lblcheckbox'}}) }}
				    {{ form_widget(form.dejeuner_americain, {'attr':{'class':'checkbox'}}) }}
				    {{ form_label(form.dejeuner_buffet, "Déjeuner buffet", {'attr':{'class':'lblnompays lblcheckbox'}}) }}
				    {{ form_widget(form.dejeuner_buffet, {'attr':{'class':'checkbox'}}) }}
				    {{ form_label(form.dejeuner_non_compris, "Déjeuner non compris", {'attr':{'class':'lblnompays lblcheckbox'}}) }}
				    {{ form_widget(form.dejeuner_non_compris, {'attr':{'class':'checkbox'}}) }}
				    {{ form_label(form.photo1_doctrine, "Image pour la présentation", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.photo1_doctrine, {'attr':{'class':'txt_add_state'}}) }}	
				    {% if imgPresentation is defined and imgPresentation != "" %}
				    	<img src="{{ asset('uploads/chambres') }}/{{ infoid }}/{{ imgPresentation }}" style="width:157px; height:101px; position:relative; top:-40px; left:540px;" />
				    {% endif %}
				    {{ form_label(form.ordre_affichage, "Ordre d'affichage", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.ordre_affichage, {'attr':{'class':'txt_add_state'}}) }}
