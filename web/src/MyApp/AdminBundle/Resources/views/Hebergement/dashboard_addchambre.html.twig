				    {{ form_widget(form.tarif_max_relache, {'attr':{'class':'txt_add_state'}}) }}
				    {{ form_label(form.description_tarif_basse_saison_fr, "Description basse saison FR", {'attr':{'class':'lblnompays flag_fr'}}) }}
				    {{ form_widget(form.description_tarif_basse_saison_fr, {'attr':{'class':'txt_add_state'}}) }}
				    <p class="resize_p_form">&nbsp;</p>
				    {{ form_label(form.description_tarif_basse_saison_en, "Description basse saison EN", {'attr':{'class':'lblnompays flag_en'}}) }}
				    {{ form_widget(form.description_tarif_basse_saison_en, {'attr':{'class':'txt_add_state'}}) }}
				    <p class="resize_p_form">&nbsp;</p>
				     {{ form_label(form.description_tarif_haute_saison_fr, "Description haute saison FR", {'attr':{'class':'lblnompays flag_fr'}}) }}
				    {{ form_widget(form.description_tarif_haute_saison_fr, {'attr':{'class':'txt_add_state'}}) }}
				    <p class="resize_p_form">&nbsp;</p>
				    {{ form_label(form.description_tarif_haute_saison_en, "Description haute saison EN", {'attr':{'class':'lblnompays flag_en'}}) }}
				    {{ form_widget(form.description_tarif_haute_saison_en, {'attr':{'class':'txt_add_state'}}) }}	
