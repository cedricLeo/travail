{% extends '::base1.html.twig' %}
{% block content %}
<div class="boiteinfo">			    
{% if exist is defined %}
	<h1>Ajouter une chambre</h1>
{% else %}
	<h1>Modifier la chambre « {{ infonom }} »</h1>
{% endif %}
		<div class="ouvert">
			<div class="gris">
				<form action="" method="post" {{ form_enctype(form) }} class="update_state_form">	
					{% if exist is not defined %}
				    <a href="#delete_hide" name="#reset" class="confirm_delete" title="Pour supprimer une chambre">Supprimer</a><a href="#delete_hide" name="#reset" class="confirm_delete" title="Pour supprimer une chambre"><img src="{{ asset('bundles/myappadmin/images/Stop.png') }}" class="icon_delete"></a>
				    <div id="delete_hide">
				    	<p >Voulez vous supprimez la chambre: {{ infonom }} ?</p>
						<a href="{{ path('_Dashboard_deletechambre', {'id':infoid}) }}" class="detroye_state" >Supprimer</a>
						<a href="#reset" class="boutonannuler retouchBtnCancel"></a>
				    </div>	
				    {% endif %}   
				    <p class="obligatoire">Tous les champs qui ont un * sont obligatoires</p>	
				    {{ form_label(form.actif, "Activé la chambre", {'attr':{'class':'lblnompays lblcheckbox'}}) }}
				    {{ form_widget(form.actif, {'attr':{'class':'checkbox'}}) }}	
				    {{ form_label(form.hebergement, "Établissement *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.hebergement, {'attr':{'class':'txt_add_state'}}) }}	
				    {% if listeTypeChambre is not defined %}	
				    {{ form_label(form.type_chambre_id, "Type de chambre *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.type_chambre_id, {'attr':{'class':'txt_add_state'}}) }}	
				    {% else %}
				    {{ form_label(form.type_chambre_id, "Type de chambre *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.type_chambre_id, {'attr':{'class':'txt_add_state selectAdmin'}}) }}	
				    <div class="optionClient">
				    	{% for w in listeTypeChambre %}
				    		<p>{{ w.nomfr }}</p>
				    	{% endfor %}
				    </div>	
				    {% endif %}
				    <p class="resize_p_form">&nbsp;</p>
				    {% if listeLit is not defined %}
				    {{ form_label(form.lit_id, "Liste des lits *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.lit_id, {'attr':{'class':'txt_add_state'}}) }}	
				    {% else %}
				    {{ form_label(form.lit_id, "Liste des lits *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.lit_id, {'attr':{'class':'txt_add_state selectAdmin'}}) }}	
				    <div class="optionClient">
				    	{% for w in listeLit %}
				    		<p>{{ w.nomfr }}</p>
				    	{% endfor %}
				    </div>		
				    {% endif %}
				    <p class="resize_p_form">&nbsp;</p>
				    {% if listeEquipement is not defined %}
				    {{ form_label(form.equipement_id, "Liste des equipements *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.equipement_id, {'attr':{'class':'txt_add_state'}}) }}
				    {% else %}
				    {{ form_label(form.equipement_id, "Liste des equipements *", {'attr':{'class':'lblnompays'}}) }}
				    {{ form_widget(form.equipement_id, {'attr':{'class':'txt_add_state selectAdmin'}}) }}
				    <div class="optionClient">
				    	{% for w in listeEquipement %}
				    		<p>{{ w.nomfr }}</p>
				    	{% endfor %}
				    </div>			
				    {% endif %}
				    <p class="resize_p_form">&nbsp;</p>
				    {{ form_label(form.nom_fr, "Nom FR *", {'attr':{'class':'lblnompays flag_fr'}}) }}
				    {{ form_widget(form.nom_fr, {'attr':{'class':'txt_add_state'}}) }}
