{% extends '::base1.html.twig' %}
{% block content %}
<div class="boiteinfo">
{% if exist == "false" %}
	<h1>Ajouter un mode de paiement</h1>
{% else %}
	<h1>Modifier le mode de paiement « {{ infonom|upper }} »</h1>
{% endif %}
		<div class="ouvert">
			<div class="gris">
				<form action="" method="post" {{ form_enctype(form) }} class="update_state_form">	
					{% if exist == "true" %}
				   <a href="#delete_hide" name="#reset" class="confirm_delete" title="Pour supprimer le mode de paiement {{ infonom }}">Supprimer</a><a href="#delete_hide" name="#reset" class="confirm_delete" title="Pour supprimer un mode de paiement"><img src="{{ asset('bundles/myappadmin/images/Stop.png') }}" class="icon_delete"></a>
				    <div id="delete_hide">
				    	Voulez vous supprimez le mode de paiement :  {{ infonom }} ?
						<a href="{{ path('_Dashboard_delete_paiements', {'id':infoid, 'name':infonom}) }}" class="detroye_state" >Supprimer</a>
						<a href="#reset" class="boutonannuler"></a>
				    </div>
				    {% endif %}	
					{{ form_label(form.nom_fr, "Nom FR", {'attr':{'class':'lblnompays flag_fr'}}) }}
				    {{ form_widget(form.nom_fr, {'attr':{'class':'txt_add_state'}}) }}	
					{{ form_label(form.nom_en, "Nom En", {'attr':{'class':'lblnompays flag_en'}}) }}
				    {{ form_widget(form.nom_en, {'attr':{'class':'txt_add_state'}}) }}		
				    {{ form_label(form.image_doctrine, "Image", {'attr':{'class':'lblnompays '}}) }}
				    {{ form_widget(form.image_doctrine, {'attr':{'class':'txt_add_state'}}) }}
				    {% if exist == "true" and infoimg != "" %}
				  	<img src="{{ asset('uploads/modes_paiements/') }}{{infoid}}/{{ infoimg }}" class="img_paiement_update2"/>
				  	{% endif %}
				    {{ form_rest(form) }}			   
				    <input type="submit" value="" class="boutonvalidenregistrer"/>
				    <a href="{{ path('_Dashboard_modes_paiements') }}" class="boutonannuler"></a>
				</form>
			   <br class="clearfloat">
			</div>
		</div>
</div>
{% endblock %}