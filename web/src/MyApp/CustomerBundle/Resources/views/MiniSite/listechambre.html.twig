									<td colspan=1 title="{{ "modifer.chambre" | trans }}"><a href="{{path('MyAppUpdateChambre',{'idchambre':w.id, 'name':p.repertoirefr, 'idclient':p.id, 'redirect':redirect})}}" >{{ w.quantite }}</a></td>
									<td colspan=1 title="{{ "modifer.chambre" | trans }}"><a href="{{path('MyAppUpdateChambre',{'idchambre':w.id, 'name':p.repertoirefr, 'idclient':p.id, 'redirect':redirect})}}" >{% if w.actif == 0 %}<img src="{{ asset('bundles/myappadmin/images/buttons_cancel_xxl.png') }}"  alt="{{ "status" | trans }}"/>{% else %}<img src="{{ asset('bundles/myappadmin/images/buttons_ok_xxl.png') }}" alt="{{ "status" | trans }}" />{% endif %}</a></td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</td>
				 {% endfor %}
