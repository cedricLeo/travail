{% extends '::base1.html.twig' %}
{% block content %}
<div class="boiteinfo">
	<h1>Coupon</h1>
		<div class="ouvert">
			<div class="gris">
				<form action="" method="post" {{ form_enctype(form) }} class="update_state_form">	
					{% if exist == "true" %}
				    <a href="#delete_hide" name="#reset" class="confirm_delete" title="{{ "pour.supprimer.coupon" | trans }} ">{{ "supprimer" | trans }}</a><a href="#delete_hide" name="#reset" class="confirm_delete" title="{{ "pour.supprimer.coupon" | trans }} "><img src="{{ asset('bundles/myappadmin/images/Stop.png') }}" class="icon_delete"></a>
				    <div id="delete_hide">
				    	{% if app.request.locale == "fr" %}
				    	<p>{{ "supprimer.coupon" | trans }}:  {{ infonamefr }} ?</p>
				    	{% else %}
				    	<p>{{ "supprimer.coupon" | trans }}:  {{ infonameen }} ?</p>
				    	{% endif %}
						<a href="{{ path('MyAppDeleteCouponRabais', {'idcoupon':infocouponid, 'idclient':id, 'name':repertoire }) }}" class="detroye_state" >{{ "supprimer" | trans }}</a>
						<a href="#reset" class="boutonannuler"></a>
				    </div>
				    {% endif %}
				    {{ form_label(form.titre_fr, "titre.fr *" | trans, {'attr':{'class':'lblnompays flag_fr'}}) }}	   
				    {{ form_widget(form.titre_fr, {'attr':{'class':'txt_add_state'}}) }}	
				    {{ form_errors(form.titre_fr ) }}
				    {{ form_label(form.titre_en, "titre.en *" | trans, {'attr':{'class':'lblnompays flag_en'}}) }}	   
				    {{ form_widget(form.titre_en, {'attr':{'class':'txt_add_state'}}) }}
				    {{ form_errors(form.titre_en ) }}
				    		
				    {{ form_label(form.description_fr, "description.fr *" | trans, {'attr':{'class':'lblnompays flag_fr'}}) }}
				    {{ form_widget(form.description_fr, {'attr':{'class':'txt_add_state'}}) }}
				    {{ form_errors(form.description_fr ) }}
				    
				    {{ form_label(form.description_en, "description.en *" | trans, {'attr':{'class':'lblnompays flag_en'}}) }}
				    {{ form_widget(form.description_en, {'attr':{'class':'txt_add_state'}}) }}
				    {{ form_errors(form.description_en ) }}
				    
				    {{ form_label(form.specification_fr, "specification.fr" | trans, {'attr':{'class':'lblnompays flag_fr'}}) }}	   
				    {{ form_widget(form.specification_fr, {'attr':{'class':'txt_add_state'}}) }}	
				    {{ form_label(form.specification_en, "specification.en" | trans, {'attr':{'class':'lblnompays flag_en'}}) }}	   
				    {{ form_widget(form.specification_en, {'attr':{'class':'txt_add_state'}}) }}
				    {{ form_label(form.expiration_fr, "expiration.fr" | trans, {'attr':{'class':'lblnompays flag_fr'}}) }}	   
				    {{ form_widget(form.expiration_fr, {'attr':{'class':'txt_add_state'}}) }}	
				    {{ form_label(form.expiration_en, "expiration.en" | trans, {'attr':{'class':'lblnompays flag_en'}}) }}	   
				    {{ form_widget(form.expiration_en, {'attr':{'class':'txt_add_state'}}) }}	
				    {% if app.request.locale == "fr" %}
				    {{ form_label(form.date_expiration, "date.expiration" | trans, {'attr':{'class':'lblnompays '}}) }}	 
				    {{ form_widget(form.date_expiration, {'attr':{'class':'txt_add_state'}}) }}	
				    {% else %}
				    {{ form_label(form.date_expiration, "date.expiration" | trans, {'attr':{'class':'lblnompays '}}) }}	   
				    {{ form_widget(form.date_expiration, {'attr':{'class':'txt_add_state'}}) }}	
				    {% endif %}
				    {{ form_label(form.credit_photo, "credit.photo" | trans, {'attr':{'class':'lblnompays'}}) }}	   
				    {{ form_widget(form.credit_photo, {'attr':{'class':'txt_add_state'}}) }}
				    <div class="imgCouponRabais" >
				    {{ form_label(form.image_doctrine_fr, "image.fr" | trans, {'attr':{'class':'lblnompays flag_fr'}}) }}	   
				    {{ form_widget(form.image_doctrine_fr, {'attr':{'class':'txt_add_state'}}) }}	
				    {% if infoimgfr is defined and infoimgfr != "" %}
				  		<img src="{{ asset('uploads/coupons-rabais') }}/{{infocouponid}}/{{ infoimgfr }}" class="img_coupon"/ style="width:154px; height:105px;">
				  	{% endif %}
				  	</div>
				  	<div class="imgCouponRabais" >
				    {{ form_label(form.image_doctrine_en, "image.en" | trans, {'attr':{'class':'lblnompays flag_en'}}) }}	   
				    {{ form_widget(form.image_doctrine_en, {'attr':{'class':'txt_add_state'}}) }}	
				 	{% if infoimgen is defined and infoimgen != "" %}
				  		<img src="{{ asset('uploads/coupons-rabais') }}/{{infocouponid}}/{{ infoimgen }}" class="img_coupon"/ style="width:154px; height:105px;">
				  	{% endif %}	
				  	</div>
				    {{ form_rest(form) }}	
				    <input type="submit" value="" class="boutonvalidenregistrer"/>
				    <a href="{{ path('_Dashboard_compteCustomer') }}" class="boutonannuler"></a>
				</form>
			   <br class="clearfloat">
			</div>
		</div>
</div>
{% endblock %}